<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.ausis" name="ausis" version="0.1.3" provider-name="Naglis Jonaitis">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="xbmc.addon" version="16.9.701"/>
        <import addon="script.module.peewee" version="2.8.3"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="login"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Audiobook support plugin for Kodi</summary>
        <description lang="en">Can't live without audiobooks? Love Kodi? Now these two awesome things can go together!</description>
        <platform>linux windx</platform>
